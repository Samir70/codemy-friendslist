<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead"> 
    <%= @friend.email %> ||
    <%= @friend.phone %>
  </p>
  <hr class="my-4">
  <p>Twitter handle: <%= @friend.twitter %></p>
  <p class="lead">
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-primary" %> 
    <%= link_to "Back to friends", friends_path, class:"btn btn-primary" %>
  </p>
</div>

<div class="container">
  <%= button_to "Destroy this friend", @friend, method: :delete, class:"btn btn-danger" %>
</div>
